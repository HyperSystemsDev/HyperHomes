$C = "../Common.ui";
$S = "styles.ui";

Group {
  LayoutMode: Left;
  Background: $C.@InputBoxBackground;
  Padding: (Top: 12, Bottom: 12, Left: 15, Right: 15);
  Anchor: (Bottom: 6, Height: 64);

  Group {
    LayoutMode: Top;
    FlexWeight: 1;

    Label #HomeName {
      Text: "Home";
      Style: (FontSize: 16, RenderBold: true, TextColor: #FFAA00);
      Anchor: (Bottom: 4);
    }

    Group {
      LayoutMode: Left;

      Label #WorldName {
        Text: "World";
        Style: (FontSize: 12, TextColor: #6a6a8a);
      }

      Label {
        Text: "  ";
        Style: (FontSize: 12, TextColor: #6a6a8a);
      }

      Label #Coords {
        Text: "0, 0, 0";
        Style: (FontSize: 12, TextColor: #888888);
      }
    }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Width: 115);
    Padding: (Top: 7);

    TextButton #TeleportBtn {
      Text: "TP";
      Anchor: (Height: 26, Right: 6, Width: 50);
      Padding: (Left: 8, Right: 8, Top: 5, Bottom: 5);
      Style: $S.@SmallGreenButtonStyle;
    }

    TextButton #EditBtn {
      Text: "EDIT";
      Anchor: (Height: 26, Width: 55);
      Padding: (Left: 8, Right: 8, Top: 5, Bottom: 5);
      Style: $S.@SmallButtonStyle;
    }
  }
}
