$C = "../Common.ui";
$S = "styles.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 550, Height: 470);

  #Title {
    $C.@Title {
      @Text = "Your Homes";
    }
  }

  #Content {
    LayoutMode: Top;
    Padding: (Left: 15, Right: 15, Top: 10, Bottom: 10);

    Group #PendingNotification {
      Anchor: (Height: 0);
    }

    Group {
      Anchor: (Height: 35, Bottom: 10);
      LayoutMode: Left;

      Label #HomeCount {
        Text: "0/5";
        Style: (FontSize: 14, TextColor: #888888, VerticalAlignment: Center);
      }

      Label {
        FlexWeight: 1;
      }

      TextButton #NavShared {
        Text: "SHARED WITH ME";
        Anchor: (Height: 26, Width: 140);
        Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
        Style: $S.@GoldButtonStyle;
      }
    }

    Group {
      Anchor: (Height: 1, Bottom: 8);
      Background: (Color: #93844c);
    }

    Group #HomesListContainer {
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      FlexWeight: 1;

      Group #HomesList {
        LayoutMode: Top;

        Group #HomeCard0 { Anchor: (Height: 70); }
        Group #HomeCard1 { Anchor: (Height: 70); }
        Group #HomeCard2 { Anchor: (Height: 70); }
        Group #HomeCard3 { Anchor: (Height: 70); }
        Group #HomeCard4 { Anchor: (Height: 70); }
        Group #HomeCard5 { Anchor: (Height: 70); }
      }
    }

    Group {
      Anchor: (Height: 1, Top: 8, Bottom: 8);
      Background: (Color: #93844c);
    }

    Group #Pagination {
      Anchor: (Height: 35);
      LayoutMode: Left;

      TextButton #PrevBtn {
        Text: "< PREV";
        Anchor: (Height: 26, Width: 80);
        Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
        Style: $S.@ButtonStyle;
      }

      Label {
        FlexWeight: 1;
      }

      Label #PageInfo {
        Text: "1/1";
        Style: (FontSize: 14, TextColor: #888888, HorizontalAlignment: Center, VerticalAlignment: Center);
        Anchor: (Width: 60);
      }

      Label {
        FlexWeight: 1;
      }

      TextButton #NextBtn {
        Text: "NEXT >";
        Anchor: (Height: 26, Width: 80);
        Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
        Style: $S.@ButtonStyle;
      }
    }
  }
}

$C.@BackButton {}
