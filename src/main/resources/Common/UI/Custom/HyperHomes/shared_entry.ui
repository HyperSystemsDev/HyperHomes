$C = "../Common.ui";
$S = "styles.ui";

Group {
  LayoutMode: Left;
  Background: $C.@InputBoxBackground;
  Padding: (Top: 10, Bottom: 10, Left: 15, Right: 15);
  Anchor: (Bottom: 6, Height: 59);

  Group {
    LayoutMode: Top;
    FlexWeight: 1;
    Padding: (Top: 2);

    Group {
      LayoutMode: Left;
      Anchor: (Height: 22, Bottom: 3);

      Label #HomeName {
        Text: "Home";
        Style: (FontSize: 15, RenderBold: true, TextColor: #FFAA00);
      }

      Label {
        Text: " from ";
        Style: (FontSize: 12, TextColor: #6a6a8a, VerticalAlignment: Center);
      }

      Label #OwnerName {
        Text: "Player";
        Style: (FontSize: 13, RenderBold: true, TextColor: #4a9eff, VerticalAlignment: Center);
      }
    }

    Group {
      LayoutMode: Left;

      Label #WorldName {
        Text: "World";
        Style: (FontSize: 12, TextColor: #6a6a8a);
      }

      Label {
        Text: "  ";
        Style: (FontSize: 12, TextColor: #6a6a8a);
      }

      Label #Coords {
        Text: "0, 0, 0";
        Style: (FontSize: 12, TextColor: #888888);
      }
    }
  }

  TextButton #TeleportBtn {
    Text: "TP";
    Anchor: (Height: 26, Width: 50);
    Padding: (Left: 8, Right: 8, Top: 5, Bottom: 5);
    Style: $S.@SmallGreenButtonStyle;
  }
}
